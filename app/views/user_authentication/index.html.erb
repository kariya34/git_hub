<h1>ログイン</h1>
<hr>
<% if @message!=nil %>
<%= @message %>
<% end %>

<div align="center">
  <table border="0">
    <%= form_tag(action: :login, method: :post) do %>
      <tr>
        <th>
          <%= label(:user_id,"Id") %>
        </th>
        <td>
          <%= text_field_tag(:user_id,@user_id) %><br>
        </td>
      </tr>
      <tr>
        <th>
          <%= label(:password,"パスワード") %>
        </th>
        <td>
          <%= password_field_tag(:password,@password) %><br>
        </td>
      </tr>
      <tr>
        <td colspan="2"  align="center">
          <%= submit_tag "ログイン" %>
        </td>
      </tr>
      <tr>
        <td colspan="2"  align="center">
          <p>※Id,パスワードを忘れた方は管理者へご連絡ください。</p>
        </td>
      </tr>
    <% end %>
  </table>
</div>

